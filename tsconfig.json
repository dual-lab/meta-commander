{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "esnext"
    ],
    "baseUrl": "",
    "rootDirs": [
      "."
    ],
    "types": [
      "node",
      "reflect-metadata"
    ]
  },
  "include": [
    "src/**/*.ts",
    "proposal/**/*.ts"
  ]
}
